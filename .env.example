# Polymarket API Configuration
# Get your API key from: https://docs.polymarket.com/developers/builders/builder-profile
NEXT_PUBLIC_POLYMARKET_API_KEY=your_polymarket_api_key_here

# OnchainKit Configuration
# Get your API key from: https://docs.base.org/onchainkit/getting-started
NEXT_PUBLIC_ONCHAINKIT_API_KEY=your_coinbase_api_key_here

# Base Network Configuration
NEXT_PUBLIC_CHAIN_ID=8453  # Base Mainnet (84532 for Sepolia)

# WalletConnect Configuration
# Get your project ID from: https://cloud.walletconnect.com/
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=your_wallet_connect_project_id_here

# MiniKit Configuration
# Get your app ID from Base App developer console
NEXT_PUBLIC_MINIKIT_APP_ID=your_minikit_app_id_here

# Base App Configuration
NEXT_PUBLIC_BASE_APP_URL=https://base.app